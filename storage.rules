rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Avatars folder - users can upload to their own folder
    match /avatars/{userId}/{allPaths=**} {
      // Users can read any avatar video
      allow read: if request.auth != null;
      
      // Users can only upload to their own folder
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Users can delete their own files
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Training video folder - only admins can upload/manage
    // Note: Admin check is done in backend code since Storage rules can't access Firestore
    match /training-video/{allPaths=**} {
      // All authenticated users can read training videos (needed for AI generation)
      allow read: if request.auth != null;
      
      // Authenticated users can write (admin check is enforced in backend)
      // Backend code will verify admin status before allowing upload
      allow write: if request.auth != null;
      
      // Authenticated users can delete (admin check is enforced in backend)
      allow delete: if request.auth != null;
    }
  }
}


